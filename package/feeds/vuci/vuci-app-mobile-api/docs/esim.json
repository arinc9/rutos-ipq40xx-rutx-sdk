                        "x-web": {
                          "pretty": "eSIM activation code",
                          "input-type": "input"
                        }
                      },
                      "name": {
                        "type": "string",
                        "maxLength": 64,
                        "description": "Custom eSIM profile name.",
                        "x-web": {
                          "pretty": "eSIM profile name",
                          "input-type": "input"
                        }
                      }
                    }
                  }
                }
              }
