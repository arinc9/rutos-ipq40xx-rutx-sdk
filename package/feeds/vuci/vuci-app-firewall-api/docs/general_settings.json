            "x-web": {
              "pretty": "Automatic helper assignment",
              "input-type": "switch"
            }
          },
          "input": {
            "type": "string",
            "enum": [
              "REJECT",
              "DROP",
              "ACCEPT"
            ],
            "description": "Default action of the INPUT chain if a packet does not match any existing rule on that chain",
            "x-web": {
              "pretty": "Input",
              "input-type": "select"
            }
          },
          "output": {
            "type": "string",
            "enum": [
              "REJECT",
              "DROP",
              "ACCEPT"
            ],
            "description": "Default action of the OUTPUT chain if a packet does not match any existing rule on that chain",
            "x-web": {
              "pretty": "Output",
              "input-type": "select"
            }
          },
          "forward": {
            "type": "string",
            "enum": [
              "REJECT",
              "DROP",
              "ACCEPT"
            ],
            "description": "Default action of the FORWARD chain if a packet does not match any existing rule on that chain",
            "x-web": {
              "pretty": "Forward",
              "input-type": "select"
            }
          }
        }
