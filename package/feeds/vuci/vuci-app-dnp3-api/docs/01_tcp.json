{
  "openapi": "3.0.0",
  "tags": [
    {
      "name": "TCP Station"
    }
  ],
  "paths": {
    "/dnp3/tcp/config": {
      "get": {
        "tags": [
          "TCP Station"
        ],
        "summary": "Returns all TCP Station configuration",
        "description": "Returns all configuration with their parameters form TCP Station configuration",
        "responses": {
          "200": {
            "$ref": "#/components/responses/200DNP3TCPMulti"
          }
        }
      },
      "post": {
        "tags": [
          "TCP Station"
        ],
        "summary": "Creates TCP Station configuration",
        "responses": {
          "201": {
            "$ref": "#/components/responses/200DNP3TCP"
          },
          "422": {
            "$ref": "#/components/responses/422response"
          }
        },
        "requestBody": {
          "description": "Parameter configuration",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "data": {
                    "$ref": "#/components/schemas/DNP3_tcp_options"
                  }
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "TCP Station"
        ],
        "summary": "Updates specified TCP Station configurations",
        "responses": {
          "200": {
            "$ref": "#/components/responses/200DNP3TCPMulti"
          },
          "422": {
            "$ref": "#/components/responses/422response"
          },
          "404": {
            "$ref": "#/components/responses/404response"
          }
        },
        "requestBody": {
          "description": "Parameter configuration",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "data": {
                    "type": "array",
                    "description": "Array of of configuration objects",
                    "items": {
                      "allOf": [
                        {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "string"
                            }
                          }
                        },
                        {
                          "$ref": "#/components/schemas/DNP3_tcp_options"
                        }
                      ]
                    }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "TCP Station"
        ],
        "summary": "Deletes specified TCP Station configurations",
        "responses": {
          "200": {
            "$ref": "#/components/responses/200deleted_multi"
          },
          "404": {
            "$ref": "#/components/responses/404response"
          }
        },
        "requestBody": {
          "description": "Parameter configuration",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "data": {
                    "type": "array",
                    "description": "Array of of configuration objects",
                    "items": {
                      "type": "string",
                      "description": "configuration id"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "x-web": {
        "name": "DNP3",
        "menu": [
          "Services",
          "DNP3",
          "DNP3"
        ],
        "hw_tags": {
          "is_access_point": false,
          "is_switch": false
        }
      }
    },
