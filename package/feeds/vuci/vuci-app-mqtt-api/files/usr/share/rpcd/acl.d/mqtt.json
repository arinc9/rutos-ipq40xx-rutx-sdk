{
	"services/mqtt/publisher": {
		"read": {
			"api": ["/mqtt/publisher/*", "/certificates/config/*", "/modems/status_basic/*"]
		},
		"write": {
			"api": ["/mqtt/publisher/*"]
		}
	},
	"services/mqtt/broker": {
		"description": "mqtt broker configuration",
		"read": {
			"uci": [
				"mosquitto",
				"firewall"
			],
			"ubus": {
				"vuci.system.certificates": [
					"get_keys",
					"get_ca_files",
					"get_only_certificates"
				]
			},
			"api": ["/mqtt/broker/*", "/mqtt/bridge/*", "/certificates/config/*"]
		},
		"write": {
			"uci": [
				"mosquitto",
				"firewall"
			],
			"api": ["/mqtt/broker/*", "/mqtt/bridge/*"]
		}
	}
}
