  "paths": {
    "/dns/config": {
      "get": {
        "summary": "Returns DNS configurations",
        "responses": {
          "200": {
            "$ref": "#/components/responses/200dnsMulti"
          }
        },
        "tags": [
          "General"
        ]
      },
      "put": {
        "summary": "Updates DNS configurations",
        "responses": {
          "200": {
            "$ref": "#/components/responses/200dnsMulti"
          },
          "404": {
            "$ref": "#/components/responses/404response"
          },
          "422": {
            "$ref": "#/components/responses/422response"
          }
        },
        "requestBody": {
          "description": "Parameter section",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "data": {
                    "type": "array",
                    "description": "Array of configuration objects",
                    "items": {
                      "$ref": "#/components/schemas/dns_options"
                    }
                  }
                }
              }
            }
          }
        },
        "tags": [
          "General"
        ]
      },
      "x-web": {
        "menu": [
          "Network",
          "DNS",
          "DNS"
        ],
        "hw_tags": {
          "is_access_point": false,
          "is_switch": false
        },
        "name": "DNS"
      }
    },
    "/dns/config/{id}": {
      "get": {
        "summary": "Returns DNS configuration",
        "responses": {
          "200": {
            "$ref": "#/components/responses/200dns"
          },
          "404": {
            "$ref": "#/components/responses/404response"
          }
        },
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The ID of the DNS configuration"
          }
        ],
        "tags": [
          "General"
        ]
      },
      "put": {
        "summary": "Updates DNS configuration",
        "responses": {
          "200": {
            "$ref": "#/components/responses/200dns"
          },
          "404": {
            "$ref": "#/components/responses/404response"
          },
          "422": {
            "$ref": "#/components/responses/422response"
          }
        },
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The ID of the DNS configuration"
          }
        ],
        "requestBody": {
          "description": "Parameter section",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "data": {
                    "$ref": "#/components/schemas/dns_single_options"
                  }
                }
              }
            }
          }
        },
        "tags": [
          "General"
        ]
      },
      "post": {
        "summary": "Uploads DNS servers file",
        "operationId": "post-network-dns-config-dns_id",
        "responses": {
          "200": {
            "$ref": "#/components/responses/file_response"
          },
          "404": {
            "$ref": "#/components/responses/404response"
          },
          "422": {
            "$ref": "#/components/responses/422response"
          }
        },
        "requestBody": {
          "$ref": "#/components/requestBodies/file_upload_dns"
        },
        "tags": [
