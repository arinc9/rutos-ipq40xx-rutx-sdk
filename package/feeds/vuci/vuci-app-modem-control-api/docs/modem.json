{
  "openapi": "3.0.0",
  "tags": [
    {
      "name": "Modem Control"
    }
  ],
  "paths": {
    "/modem_control/config": {
      "get": {
        "tags": [
          "Modem Control"
        ],
        "summary": "Returns all Modem Control configurations",
        "responses": {
          "200": {
            "$ref": "#/components/responses/200SocatMulti"
          }
        }
      },
      "post": {
        "tags": [
          "Modem Control"
        ],
        "summary": "Creates Modem Control configuration",
        "responses": {
          "201": {
            "$ref": "#/components/responses/200Socat"
          },
          "422": {
            "$ref": "#/components/responses/422response"
          }
        },
        "requestBody": {
          "description": "Parameter section",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "data": {
                    "$ref": "#/components/schemas/socat_single_options"
                  }
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "Modem Control"
        ],
        "summary": "Updates specified Modem Control configurations",
        "responses": {
          "200": {
            "$ref": "#/components/responses/200SocatMulti"
          },
          "404": {
            "$ref": "#/components/responses/404response"
          },
          "422": {
            "$ref": "#/components/responses/422response"
          }
        },
        "requestBody": {
          "description": "Parameter section",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "data": {
                    "type": "array",
                    "description": "Array of section objects",
                    "items": {
                      "$ref": "#/components/schemas/socat_options"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Modem Control"
        ],
        "summary": "Deletes specified Modem Control configurations",
        "responses": {
          "200": {
            "$ref": "#/components/responses/200deleted_multi"
          },
          "404": {
            "$ref": "#/components/responses/404response"
          }
        },
        "requestBody": {
          "description": "Parameter section",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "data": {
                    "type": "array",
                    "description": "Array of section objects",
                    "items": {
                      "type": "string",
                      "description": "Section id"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "x-web": {
        "menu": [
          "Services",
          "Modem Control",
          "Modem Control"
        ],
        "hw_tags": {
          "serial_usb": true,
          "mobile": true
        }
      }
    },
    "/modem_control/config/{id}": {
      "get": {
        "tags": [
          "Modem Control"
        ],
        "summary": "Returns the specified Modem Control configuration",
        "responses": {
          "200": {
            "$ref": "#/components/responses/200Socat"
          },
          "404": {
            "$ref": "#/components/responses/404response"
          }
        },
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Modem Control configuration identifier (ID)."
          }
        ]
      },
      "put": {
        "tags": [
          "Modem Control"
        ],
        "summary": "Updates the specified Modem Control configuration",
        "responses": {
          "200": {
            "$ref": "#/components/responses/200Socat"
          },
          "404": {
            "$ref": "#/components/responses/404response"
          },
          "422": {
            "$ref": "#/components/responses/422response"
          }
        },
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Modem Control configuration identifier (ID)."
          }
        ],
        "requestBody": {
          "description": "Parameter section",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "data": {
                    "$ref": "#/components/schemas/socat_single_options"
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Modem Control"
        ],
        "summary": "Deletes the specified Modem Control configuration",
        "responses": {
          "200": {
            "$ref": "#/components/responses/200deleted"
          },
          "404": {
            "$ref": "#/components/responses/404response"
          }
        },
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Modem Control configuration identifier (ID)."
          }
        ]
      },
      "x-web": {
        "menu": [
          "Services",
          "Modem Control",
          "Modem Control"
        ],
        "hw_tags": {
          "serial_usb": true,
          "mobile": true
        }
      }
    }
  },
  "components": {
    "responses": {
      "200Socat": {
        "description": "Returns configuration",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean",
                  "description": "Operation status"
                },
                "data": {
                  "$ref": "#/components/schemas/socat_options"
                }
              }
            }
          }
        }
      },
      "200SocatMulti": {
        "description": "Returns configuration",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean",
                  "description": "Operation status"
                },
                "data": {
                  "type": "array",
                  "description": "Array of section objects",
                  "items": {
                    "$ref": "#/components/schemas/socat_options"
                  }
                }
              }
            }
          }
        }
      }
    },
    "schemas": {
      "socat_single_options": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "maxLength": 200,
            "description": "Name of serial device",
            "x-web": {
              "pretty": "Name",
              "unique": true,
              "input-type": "input"
            }
          },
          "device": {
            "type": "string",
            "description": "Which serial port will be used for serial communication",
            "x-web": {
              "pretty": "Device",
              "input-type": "select",
              "enum-pretty": {
                "/dev/rs232": "rs232",
                "/dev/rs485": "rs485",
                "/dev/rsconsole": "Console"
              },
              "enum-depends": [
                {
                  "hw_tags": {
                    "rs232": true,
                    "rs485": true
                  },
                  "values": [
                    "/dev/rs232",
                    "/dev/rs485"
                  ]
                },
                {
                  "hw_tags": {
                    "rs232": true,
                    "rs485": false
                  },
                  "values": [
                    "/dev/rs232"
                  ]
                },
                {
                  "hw_tags": {
                    "rs232": false,
                    "rs485": true
                  },
                  "values": [
                    "/dev/rs485"
                  ]
                },
                {
                  "hw_tags": {
                    "console": true
                  },
                  "values": [
                    "/dev/rsconsole"
                  ]
                }
              ]
            }
          },
          "enabled": {
            "x-web": {
              "pretty": "Enable",
              "input-type": "switch"
            },
            "type": "string",
            "description": "Enable service",
            "format": "is_bool",
            "enum": [
              "0",
              "1"
            ]
          },
          "baudrate": {
            "type": "string",
            "enum": [
              "300",
              "1200",
              "2400",
              "4800",
              "9600",
              "19200",
              "38400",
              "57600",
              "115200"
            ],
            "default": "9600",
            "description": "Select supported baud rate",
            "x-web": {
              "pretty": "Baud rate",
              "input-type": "select",
              "enum-depends": [
                {
                  "depends": {
                    "device": [
                      "/dev/rs232",
                      "/dev/rsconsole"
                    ]
                  },
                  "hw_tags": {
                    "baudrate_115200": true
                  },
                  "values": [
                    "300",
                    "600",
                    "1200",
                    "2400",
                    "4800",
                    "9600",
                    "19200",
                    "38400",
                    "57600",
                    "115200"
                  ]
                },
                {
                  "depends": {
                    "device": "/dev/rs485"
                  },
                  "hw_tags": {
                    "baudrate_3000000": true
                  },
                  "values": [
                    "300",
                    "600",
                    "1200",
                    "2400",
                    "4800",
                    "9600",
                    "19200",
                    "38400",
                    "57600",
                    "115200",
                    "230400",
                    "460800",
                    "921600",
                    "1000000",
                    "3000000"
                  ]
                },
                {
                  "depends": {
                    "device": "/dev/rs485"
                  },
                  "hw_tags": {
                    "baudrate_230400": true
                  },
                  "values": [
                    "300",
                    "600",
                    "1200",
                    "2400",
                    "4800",
                    "9600",
                    "19200",
                    "38400",
                    "57600",
                    "115200",
                    "230400"
                  ]
                }
              ]
            }
          },
          "databits": {
            "type": "string",
            "enum": [
              "5",
              "6",
              "7",
              "8"
            ],
            "default": "8",
            "description": "Select how many bits will be used for character",
            "x-web": {
              "pretty": "Data bits",
              "input-type": "select",
              "enum-depends": [
                {
                  "depends": {
                    "device": "/dev/rs232"
                  },
                  "hw_tags": {
                    "databits_full": true
                  },
                  "values": [
                    "5",
                    "6",
                    "7",
                    "8"
                  ]
                },
                {
                  "depends": {
                    "device": [
                      "/dev/rs232",
                      "/dev/rsconsole"
                    ]
                  },
                  "hw_tags": {
                    "databits_half": true
                  },
                  "values": [
                    "7",
                    "8"
                  ]
                },
                {
                  "depends": {
                    "device": "/dev/rs485"
                  },
                  "hw_tags": {
                    "databits_8": true
                  },
                  "values": [
                    "8"
                  ]
                },
                {
                  "depends": {
                    "device": "/dev/rs485"
                  },
                  "hw_tags": {
                    "databits_full": true
                  },
                  "values": [
                    "5",
                    "6",
                    "7",
                    "8"
                  ]
                },
                {
                  "depends": {
                    "device": "/dev/rs485"
                  },
                  "hw_tags": {
                    "databits_half": true
                  },
                  "values": [
                    "7",
                    "8"
                  ]
                }
              ]
            }
          },
          "stopbits": {
            "type": "string",
            "enum": [
              "1",
              "2"
            ],
            "default": "1",
            "description": "Select how many stop bits will be used to detect the end of character",
            "x-web": {
              "pretty": "Stop bits",
              "input-type": "select",
              "enum-depends": [
                {
                  "depends": {
                    "device": [
                      "/dev/rs232",
                      "/dev/rsconsole"
                    ]
                  },
                  "hw_tags": {
                    "stopbits_2": true
                  },
                  "values": [
                    "1",
                    "2"
                  ]
                },
                {
                  "depends": {
                    "device": "/dev/rs485"
                  },
                  "hw_tags": {
                    "stopbits_1": true
                  },
                  "values": [
                    "1"
                  ]
                },
                {
                  "depends": {
                    "device": "/dev/rs485"
                  },
                  "hw_tags": {
                    "stopbits_2": true
                  },
                  "values": [
                    "1",
                    "2"
                  ]
                }
              ]
            }
          },
          "parity": {
            "type": "string",
            "enum": [
              "odd",
              "even",
              "none"
            ],
            "description": "Select what kind of parity bit to use for error detection",
            "x-web": {
              "pretty": "Parity",
              "enum-pretty": {
                "odd": "Odd",
                "even": "Even",
                "mark": "Mark",
                "space": "Space",
                "none": "None"
              },
              "input-type": "select",
              "enum-depends": [
                {
                  "depends": {
                    "device": [
                      "/dev/rs232",
                      "/dev/rsconsole"
                    ]
                  },
                  "hw_tags": {
                    "parity_max": true
                  },
                  "values": [
                    "even",
                    "odd",
                    "mark",
                    "space",
                    "none"
                  ]
                },
                {
                  "depends": {
                    "device": "/dev/rs485"
                  },
                  "hw_tags": {
                    "parity_min": true
                  },
                  "values": [
                    "even",
                    "odd",
                    "none"
                  ]
                },
                {
                  "depends": {
                    "device": "/dev/rs485"
                  },
                  "hw_tags": {
                    "parity_max": true
                  },
                  "values": [
                    "even",
                    "odd",
                    "mark",
                    "space",
                    "none"
                  ]
                }
              ]
            }
          },
          "flowcontrol": {
            "type": "string",
            "enum": [
              "none",
              "xon/xoff",
              "rts/cts"
            ],
            "description": "Select what kind of characters to use for flow control",
            "x-web": {
              "pretty": "Flow control",
              "enum-pretty": {
                "none": "None",
                "rts/cts": "RTS/CTS",
                "xon/xoff": "Xon/Xoff"
              },
              "input-type": "select",
              "enum-depends": [
                {
                  "depends": {
                    "device": [
                      "/dev/rs232",
                      "/dev/rsconsole"
                    ]
                  },
                  "hw_tags": {
                    "flowcontrol_3": true
                  },
                  "values": [
                    "rts/cts",
                    "xon/xoff",
                    "none"
                  ]
                },
                {
                  "depends": {
                    "device": "/dev/rs485"
                  },
                  "hw_tags": {
                    "flowcontrol_none": true
                  },
                  "values": [
                    "none"
                  ]
                },
                {
                  "depends": {
                    "device": "/dev/rs485",
                    "full_duplex_enabled": "1"
                  },
                  "hw_tags": {
                    "flowcontrol_2": true
                  },
                  "values": [
                    "none",
                    "xon/xoff"
                  ]
                },
                {
                  "depends": {
                    "device": "/dev/rs485",
                    "full_duplex_enabled": "0"
                  },
                  "hw_tags": {
                    "flowcontrol_none": true
                  },
                  "values": [
                    "none"
                  ]
                }
              ]
            }
          },
          "ctl_mode": {
            "type": "string",
            "description": "Select modem Control mode",
            "enum": [
              "partial",
              "full"
            ],
            "x-web": {
              "pretty": "Mode",
              "enum-pretty": {
                "partial": "Partial control",
                "full": "Full control"
              },
              "input-type": "select"
            }
          },
          "modem": {
            "type": "string",
            "description": "Modem, which is used for modem Control.",
            "x-web": {
              "pretty": "Modem",
              "input-type": "select",
              "enum-pretty": {
                "$ref": "#/x-schemas/modem_names"
              },
              "enum-depends": {
                "$ref": "#/x-schemas/modem_select"
              }
            }
          },
          "full_duplex_enabled": {
            "type": "string",
            "format": "is_bool",
            "example": "0",
            "enum": [
              "0",
              "1"
            ],
            "description": "Check to enable rs485 Full-Duplex",
            "x-web": {
              "pretty": "Full duplex",
              "input-type": "switch",
              "depends": [
                {
                  "device": "/dev/rs485"
                }
              ]
            }
          },
          "start_up_msg": {
            "type": "array",
            "description": "Prints message to serial device when modem Control is ready",
            "items": {
              "type": "string"
            },
            "x-web": {
              "pretty": "Start up message",
              "input-type": "input"
            }
          },
          "csd_enabled": {
            "x-web": {
              "pretty": "Enable CSD",
              "input-type": "switch"
            },
            "type": "string",
            "description": "Enable CSD service",
            "format": "is_bool",
            "enum": [
              "0",
              "1"
            ],
            "depends": [
              {
                "modems": [
                  "EC25-EU",
                  "EC21-EU"
                ]
              }
            ]
          },
          "csd_scan_mode": {
            "type": "string",
            "enum": [
              "0",
              "1"
            ],
            "description": "Network mode for CSD service. Auto - switching between 2G/3G and LTE",
            "x-web": {
              "pretty": "Flow control",
              "enum-pretty": {
                "0": "Auto",
                "1": "2G only"
              },
              "input-type": "select",
              "enum-depends": [
                {
                  "depends": {
                    "modems": [
                      "EC25-EU",
                      "EC21-EU"
                    ]
                  },
                  "values": [
                    "0",
                    "1"
                  ]
                }
              ]
            }
          },
          "csd_role": {
            "type": "string",
            "enum": [
              "0",
              "1"
            ],
            "description": " Role for CSD service",
            "x-web": {
              "pretty": "Role",
              "enum-pretty": {
                "0": "Caller",
                "1": "Responder"
              },
              "input-type": "select",
              "enum-depends": [
                {
                  "depends": {
                    "modems": [
                      "EC25-EU",
                      "EC21-EU"
                    ]
                  },
                  "values": [
                    "0",
                    "1"
                  ]
                }
              ]
            }
          }
        }
      },
      "socat_options": {
        "allOf": [
          {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Modem Control Configuration identifier (ID)."
              }
            },
            "required": [
              "id"
            ]
          },
          {
            "$ref": "#/components/schemas/socat_single_options"
          }
        ]
      }
    }
  }
}