            "maximum": "2147483647",
            "x-web": {
              "pretty": "Count of time synchronizations",
              "input-type": "input"
            }
          },
          "sync_enabled": {
            "type": "string",
            "description": "Operator Station Synchronization. Enable time synchronization with connected mobile operator.",
