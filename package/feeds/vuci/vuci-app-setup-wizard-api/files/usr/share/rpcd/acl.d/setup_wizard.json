{
    "system/wizard/step_pwd": {
        "description": "setup wizard general",
        "read": {
            "api": [
                "/date_time/ntp/client/*",
                "/package_manager/language_packages/*",
                "/system/languages/*",
                "/system/config/*"
            ],
            "uci": [
                "system",
                "vuci",
                "firewall",
                "ntpclient"
            ],
            "ubus": {
                "vuci.system": [
                    "clock_status"
                ]
            }
        },
        "write": {
            "uci": [
                "system",
                "vuci",
                "ntpclient"
            ],
            "api": [
                "/date_time/ntp/client/*",
                "/system/config/*"
            ]
        }
    },
    "system/wizard/step_lan": {
        "description": "setup wizard lan",
        "read": {
            "api": [
                "/modems/status*",
                "/interfaces/config/*",
                "/dhcp/servers/*"
            ],
            "uci": [
                "network",
                "dhcp"
            ],
            "ubus": {
                "vuci.network.mobile": [
                    "get_all_modems"
                ]
            }
        },
        "write": {
            "api": [
                "/interfaces/config/*",
                "/dhcp/servers/*"
            ],
            "uci": [
                "network",
                "dhcp"
            ]
        }
    },
    "system/wizard/step_wan": {
        "description": "setup wizard wan",
        "read": {
            "api": [
                "/modems/status*",
                "/interfaces/*",
                "/sim_cards/*"
            ],
            "uci": [
                "network",
                "simcard"
            ],
            "ubus": {
                "network.interface.*": [
                    "status"
                ]
            }
        },
        "write": {
            "api": [
                "/interfaces/*",
                "/sim_cards/*"
            ],
            "uci": [
                "network",
                "simcard"
            ]
        }
    },
    "system/wizard/step_wifi": {
        "description": "setup wizard wifi",
        "read": {
            "api": [
                "/wireless/*",
                "/modems/status*"
            ],
            "uci": [
                "wireless"
            ]
        },
        "write": {
            "api": [
                "/wireless/interfaces/*"
            ],
            "uci": [
                "wireless"
            ]
        }
    },
    "system/wizard/step_rms": {
        "description": "setup wizard rms",
        "read": {
            "api": [
                "/rms/*",
                "/modems/status*"
            ]
        },
        "write": {
            "api": [
                "/rms/*"
            ]
        }
    }
}