    "schemas": {
      "cert_options": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["key", "cert", "dh"],
            "description": "File type."
          },
          "name": {
            "type": "string",
            "description": "Name of generated certificate."
          },
          "cert_type": {
            "type": "string",
            "description": "Certificate type.",
            "enum": ["client", "server", "ca", "import"]
          },
          "key_size": {
            "type": "string",
            "description": "Key size used to generate the certificate."
          },
          "fullname": {
            "type": "string",
            "description": "File name."
          },
          "datetime": {
            "type": "string",
            "description": "Time of generation."
          },
          "import": {
            "type": "boolean",
            "description": "Certificate is imported."
          }
        }
      },
      "generation_options": {
        "type": "object",
        "properties": {
          "type": {
            "x-web": {
              "pretty": "File Type",
              "input-type": "select",
              "enum-pretty": {
                "ca": "CA",
                "client": "Client",
                "server": "Server",
                "simple": "Simple",
                "dh": "DH Parameters"
              }
            },
            "type": "string",
            "description": "Type of file to be generated Select option 'Simple' to generate ca, server & client certificates & keys.",
            "enum": ["ca", "client", "server", "simple", "dh"]
          },
          "days": {
            "x-web": {
              "pretty": "Days",
              "input-type": "input",
              "depends": [
                {
                  "sign": "1"
                }
              ]
            },
            "type": "string",
            "description": "Days until certificate expires.",
            "format": "uinteger"
          },
          "key_size": {
            "x-web": {
              "pretty": "Key Size",
              "input-type": "select"
            },
            "type": "string",
            "description": "Certificate key size.",
            "enum": ["512", "1024", "2048", "4096"]
          },
          "subject": {
            "x-web": {
              "pretty": "Subject information",
              "input-type": "input"
            },
            "type": "string",
            "description": "Subject information for certificate. format: /C=US/ST=CA/L=San Francisco/O=My Company/OU=My Unit/CN=My Common Name"
          },
          "ca": {
            "x-web": {
              "pretty": "CA File Name",
              "input-type": "select",
              "depends": [
                {
                  "sign": "1"
                }
              ]
            },
            "type": "string",
            "description": "Certificate authority file (Used for signing client and server certificates."
          },
          "ca_key": {
            "x-web": {
              "pretty": "CA Key",
              "input-type": "select",
              "depends": [
                {
                  "sign": "1"
                }
              ]
            },
            "type": "string",
            "description": "Certificate authority key for matching certificate authority file."
          },
          "name": {
            "x-web": {
              "pretty": "Name (CN)",
              "input-type": "input"
            },
            "type": "string",
            "description": "Common name and file name of the certificate."
          },
          "sign": {
            "x-web": {
              "pretty": "Sign The Certificate",
              "input-type": "switch"
            },
            "type": "string",
            "description": "Check this to sign the generated certificate with CA file.",
            "format": "is_bool",
            "enum": ["0", "1"]
          },
          "delete": {
            "x-web": {
              "pretty": "Delete Signing Request",
              "input-type": "switch",
              "depends": [
                {
                  "sign": "1"
                }
              ]
            },
            "type": "string",
            "description": "Delete certificate signing request after signing.",
            "format": "is_bool",
            "enum": ["0", "1"]
          },
          "pass": {
            "x-web": {
              "pretty": "Password",
              "input-type": "input",
              "depends": [
                {
                  "sign": "1"
                }
              ]
            },
            "type": "string",
            "description": "Private Key Decryption Password.",
            "format": "credentials_validate"
          }
        }
      },
      "sign_options": {
        "type": "object",
        "properties": {
          "name": {
            "x-web": {
              "pretty": "Signed Certificate Name",
              "input-type": "input"
            },
            "type": "string",
            "description": "Common name and file name of the certificate."
          },
          "req_file": {
            "x-web": {
              "pretty": "Certificate Request File",
              "input-type": "select"
            },
            "type": "string",
            "description": "Certificate signing request file."
          },
          "ca": {
            "x-web": {
              "pretty": "Certificate Authority File",
              "input-type": "select"
            },
            "type": "string",
            "description": "Certificate authority file (Used for signing client and server certificates."
          },
          "ca_key": {
            "x-web": {
              "pretty": "Certificate Authority Key",
              "input-type": "select"
            },
            "type": "string",
            "description": "Certificate authority key for matching certificate authority file."
          },
          "days": {
            "x-web": {
              "pretty": "Days Valid",
              "input-type": "input"
            },
            "type": "string",
            "description": "Days until certificate expires.",
            "format": "uinteger"
          },
          "delete": {
            "x-web": {
              "pretty": "Delete Signing Request",
              "input-type": "switch"
            },
            "type": "string",
            "description": "Delete certificate signing request after signing.",
            "format": "is_bool",
            "enum": ["0", "1"]
          },
          "type": {
            "x-web": {
              "pretty": "Type of certificate to sign",
              "input-type": "input",
			  "enum-pretty": {
				  "ca": "Certificate Authority",
				  "server": "Server Certificate",
				  "client": "Client Certificate"
			  }
            },
            "type": "string",
            "description": "Type of certificate to sign",
            "enum": ["ca", "server", "client"]
          }
        }
      }
    },
    "requestBodies": {
      "file_upload_certificates": {
        "content": {
          "multipart/form-data": {
            "schema": {
              "type": "object",
              "properties": {
                "file": {
                  "x-web": {
                    "pretty": "Certificate"
                  },
                  "type": "string",
                  "format": "binary",
                  "description": "File to upload."
                }
              },
              "required": ["file"]
            }
          }
        }
      }
    }
