            "enum": ["0", "1"],
            "x-web": {
              "pretty": "Operator station synchronization",
              "input-type": "switch",
              "hw_tags": {
                "mobile": true
              }
            }
          },
          "tmz_sync_enabled": {
            "type": "string",
            "description": "Timezone synchronization. Set device's timezone according to the information received from the mobile operator.",
            "format": "is_bool",
            "enum": ["0", "1"],
            "x-web": {
              "pretty": "Timezone synchronization",
              "input-type": "switch",
              "hw_tags": {
                "mobile": true
              },
              "depends": [
                {
                  "enabled": "1"
                }
              ]
            }
          },
          "failover": {
            "type": "string",
            "description": "Count of failed NTP requests. How many times should NTP client fail before launching operator station synchronization.",
