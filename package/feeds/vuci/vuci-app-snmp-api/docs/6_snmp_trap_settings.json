{
  "openapi": "3.0.0",
  "tags": [],
  "paths": {
    "/snmp/trap/global": {
      "summary": "Trap service settings",
      "description": "This section is used to configure trap service settings.",
      "get": {
        "tags": ["Trap Settings"],
        "summary": "Returns the general SNMP trap settings configuration",
        "responses": {
          "200": {
            "$ref": "#/components/responses/200snmp_trap_settings"
          }
        },
        "operationId": "snmp5"
      },
      "put": {
        "tags": ["Trap Settings"],
        "summary": "Updates the general SNMP trap settings configuration",
        "responses": {
          "200": {
            "$ref": "#/components/responses/200snmp_trap_settings"
          },
          "422": {
            "$ref": "#/components/responses/422response"
          }
        },
        "requestBody": {
          "description": "Data to update configuration",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "data": {
                    "$ref": "#/components/schemas/snmp_trap_settings"
                  }
                },
                "required": ["data"]
              }
            }
          }
        },
        "operationId": "smnp6"
      },
      "x-web": {
        "menu": ["Services", "SNMP", "Trap Settings"],
        "hw_tags": {
          "is_access_point": false,
          "is_switch": false
        },
        "name": "SNMP"
      }
    }
  },
  "components": {
    "responses": {
      "200snmp_trap_settings": {
        "description": "Returns configuration",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean",
                  "description": "Operation status"
                },
                "data": {
                  "$ref": "#/components/schemas/snmp_trap_settings"
                }
              },
              "required": ["success", "data"]
            }
          }
        }
      }
    },
    "schemas": {
      "snmp_trap_settings": {
        "type": "object",
        "properties": {
          "enabled": {
            "type": "string",
            "description": "Enable",
            "format": "is_bool",
            "enum": ["0", "1"],
            "x-web": {
              "pretty": "Enable",
              "input-type": "switch"
            }
          },
          "host": {
            "type": "string",
            "description": "Host to transfer SNMP (Simple Network Management Protocol) traffic to.",
            "format": "host",
            "x-web": {
              "pretty": "Host",
              "input-type": "input"
            }
          },
          "port": {
            "type": "string",
            "description": "Port for trap host.",
            "format": "port",
            "default": "162",
            "x-web": {
              "pretty": "Port",
              "input-type": "input"
            }
          },
          "community": {
            "type": "string",
            "description": "The SNMP (Simple Network Management Protocol) community is an ID that allows access to a routers SNMP data.",
            "format": "uciname",
            "maxLength": 16,
            "default": "Public",
            "x-web": {
              "pretty": "Community",
              "input-type": "input"
            }
          }
        }
      }
    }
  }
}
