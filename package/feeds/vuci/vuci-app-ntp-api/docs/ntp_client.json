            "enum": ["0", "1"],
            "x-web": {
              "pretty": "GPS synchronization",
              "input-type": "switch",
              "hw_tags": {
                "gps": true
              }
            }
          },
          "gps_interval": {
            "type": "string",
            "description": "How often the device will update the time using the GPS module.",
