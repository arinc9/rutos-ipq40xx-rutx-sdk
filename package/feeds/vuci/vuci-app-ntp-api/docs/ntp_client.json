            "enum": ["300", "1800", "3600", "21600", "43200", "86400", "604800", "2592000"],
            "x-web": {
              "pretty": "GPS time update interval",
              "input-type": "select",
              "hw_tags": {
                "gps": true
              },
              "depends": [
