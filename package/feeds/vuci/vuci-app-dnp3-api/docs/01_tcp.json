  "components": {
    "responses": {
      "200RequestActionTCP": {
        "description": "Returns configuration",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean",
                  "description": "Operation status"
                },
                "data": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      },
      "200DNP3TCP": {
        "description": "Returns configuration",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean",
                  "description": "Operation status"
                },
                "data": {
                  "$ref": "#/components/schemas/dnp3_tcp_options_multi"
                }
              }
            }
          }
        }
      },
      "200DNP3TCPMulti": {
        "description": "Returns configuration",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean",
                  "description": "Operation status"
                },
                "data": {
                  "type": "array",
                  "description": "Array of configuration objects",
                  "items": {
                    "$ref": "#/components/schemas/dnp3_tcp_options_multi"
                  }
                }
              }
            }
          }
        }
      }
    },
    "schemas": {
      "dnp3_tcp_options_multi": {
        "allOf": [
          {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "DNP3 client configuration identifier (ID)."
              }
            },
            "required": [
              "id"
            ]
          },
          {
            "$ref": "#/components/schemas/DNP3_tcp_options"
          }
        ]
      },
      "DNP3_tcp_options": {
        "type": "object",
        "properties": {
          "enabled": {
            "type": "string",
            "description": "Check to enable this TCP client configuration",
            "format": "is_bool",
            "enum": [
              "0",
              "1"
            ],
            "x-web": {
              "pretty": "Enable",
              "input-type": "switch"
            }
          },
          "name": {
            "type": "string",
            "description": "Name of the TCP client",
            "maxlength": 32,
            "x-web": {
              "pretty": "Name",
              "input-type": "input",
              "unique": true
            }
          },
          "local_addr": {
            "type": "string",
            "description": "Client Link-Layer address",
            "format": "irange(0, 65519)",
            "x-web": {
              "pretty": "Local address",
              "input-type": "input"
            }
          },
          "remote_addr": {
            "type": "string",
            "description": "Outstation Link-Layer address",
            "format": "irange(0, 65519)",
            "x-web": {
              "pretty": "Remote address",
              "input-type": "input"
            }
          },
          "integrity_period": {
            "type": "string",
            "description": "Period for sending data requests",
            "format": "irange(1, 60)",
            "x-web": {
              "pretty": "Period",
              "input-type": "input"
            }
          },
          "timeout": {
            "type": "string",
            "description": "Request timeout",
            "format": "irange(1, 60)",
            "x-web": {
              "pretty": "Timeout",
              "input-type": "input"
            }
          },
          "save_to_flash": {
            "type": "string",
            "description": "Check to enable saving to flash",
            "format": "is_bool",
            "enum": [
              "0",
              "1"
            ],
            "x-web": {
              "pretty": "Save to flash",
              "input-type": "switch"
            }
          },
          "ip": {
            "type": "string",
            "description": "DNP3 Outstation IP address",
            "format": "ipaddr",
            "x-web": {
              "pretty": "IP address",
              "input-type": "input"
            }
          },
          "port": {
            "type": "string",
            "description": "DNP3 Outstation Port",
            "format": "port",
            "x-web": {
              "pretty": "Port",
              "input-type": "input"
            }
          }
        }
      },
      "DNP3_tcp_test_request_options": {
        "type": "object",
        "properties": {
          "local_addr": {
            "type": "string",
            "description": "Client Link-Layer address",
            "format": "irange(0, 65519)"
          },
          "timeout": {
            "type": "string",
            "description": "Request timeout",
            "format": "irange(1, 60)"
          },
          "ip": {
            "type": "string",
            "description": "DNP3 Outstation IP address",
            "format": "ipaddr"
          },
          "remote_addr": {
            "type": "string",
            "description": "Outstation Link-Layer address",
            "format": "irange(0, 65519)"
          },
          "count": {
            "type": "string",
            "description": "End index of the data subarray",
            "format": "irange(0, 65535)"
          },
          "port": {
            "type": "string",
            "description": "DNP3 Outstation Port",
            "format": "port"
          },
          "data_type": {
            "type": "string",
            "description": "Data object group of the requested index(-es)"
          },
          "index": {
            "type": "string",
            "description": "Start index of the data subarray",
            "format": "irange(0, 65535)"
          }
        }
      }
    }
  }
}