{
  "openapi": "3.0.0",
  "tags": [
    {
      "name": "Memory expansion"
    }
  ],
  "paths": {
    "/usb_tools/memory_expansion/status": {
      "get": {
        "summary": "Returns all status information",
        "tags": [
          "Memory expansion"
        ],
        "responses": {
          "200": {
            "$ref": "#/components/responses/200memoryall"
          },
          "422": {
            "$ref": "#/components/responses/422memory"
          }
        }
      },
      "x-web": {
        "name": "USB tools",
        "menu": [
          "System",
          "Storage Memory Expansion",
          "Storage Memory Expansion"
        ],
        "hw_tags": {
          "usb": true
        }
      }
    },
    "/usb_tools/memory_expansion/actions/enable_expansion": {
      "post": {
        "tags": [
          "Memory expansion"
        ],
        "summary": "Enable memory expansion",
        "responses": {
          "200": {
            "$ref": "#/components/responses/200memorychange"
          },
          "422": {
            "$ref": "#/components/responses/422memory"
          }
        },
        "requestBody": {
          "description": "Parameter section",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "data": {
                    "type": "object",
                    "properties": {
                      "storage": {
                        "type": "string",
                        "enum": [
                          "usb"
                        ],
                        "x-web": {
                          "pretty": "Action frequency",
                          "input-type": "select",
                          "enum-pretty": {
                            "usb": "USB",
                            "sd": "SD"
                          },
                          "enum-depends": [
                            {
                              "hw_tags": {
                                "sd": true
                              },
                              "values": [
                                "sd",
                                "usb"
                              ]
                            }
                          ]
                        },
                        "description": "External storage device path"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "x-web": {
        "name": "USB tools",
        "menu": [
          "System",
          "Storage Memory Expansion",
          "Storage Memory Expansion"
        ],
        "hw_tags": {
          "usb": true
        }
      }
    },
    "/usb_tools/memory_expansion/actions/disable_expansion": {
      "post": {
        "tags": [
          "Memory expansion"
        ],
        "summary": "Disable memory expansion",
        "responses": {
          "200": {
            "$ref": "#/components/responses/200memorychange"
          },
          "422": {
            "$ref": "#/components/responses/422memory"
          }
        }
      },
      "x-web": {
        "name": "USB tools",
        "menu": [
          "System",
          "Storage Memory Expansion",
          "Storage Memory Expansion"
        ],
        "hw_tags": {
          "usb": true
        }
      }
    }
  },
  "components": {
    "responses": {
      "200memoryall": {
        "description": "Returns section",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "description": "Operation status",
                  "type": "boolean"
                },
                "data": {
                  "type": "object",
                  "properties": {
                    "expansion_enabled": {
                      "type": "string",
                      "description": "Returns status of current memory expansion state."
                    },
                    "expansion_job_status": {
                      "type": "string",
                      "description": "Returns status of currently ongoing or last memory expansion job."
                    }
                  }
                }
              }
            }
          }
        }
      },
      "422memory": {
        "description": "Error appeared while parsing request",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean",
                  "description": "Operation status",
                  "default": false
                },
                "errors": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/memory_default_error"
                  }
                }
              }
            }
          }
        }
      },
      "200memorychange": {
        "description": "Returns section",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "description": "Operation status",
                  "type": "boolean"
                },
                "data": {
                  "type": "object",
                  "properties": {
                    "response": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "schemas": {
      "memory_default_error": {
        "title": "default_error",
        "type": "object",
        "description": "Default error object",
        "properties": {
          "code": {
            "type": "number",
            "description": "Error code"
          },
          "error": {
            "type": "string",
            "description": "Error message"
          },
          "section": {
            "type": "string",
            "description": "Error section"
          }
        },
        "required": [
          "code",
          "error",
          "source"
        ]
      }
    }
  }
}