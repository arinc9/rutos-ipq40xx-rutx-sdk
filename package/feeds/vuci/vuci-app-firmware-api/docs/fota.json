{
  "openapi": "3.0.0",
  "info": {
    "title": "FOTA",
    "description": "FOTA API documentation",
    "version": "1.0.0"
  },
  "tags": [],
  "paths": {
    "/fota/config": {
      "get": {
        "summary": "Returns Fota configuration",
        "responses": {
          "200": {
            "$ref": "#/components/responses/200fota"
          }
        },
        "tags": ["General"]
      },
      "put": {
        "summary": "Updates Fota configuration",
        "responses": {
          "200": {
            "$ref": "#/components/responses/200fota"
          },
          "404": {
            "$ref": "#/components/responses/404response"
          },
          "422": {
            "$ref": "#/components/responses/422response"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "data": {
                    "type": "array",
                    "description": "Array of section objects",
                    "items": {
                      "$ref": "#/components/schemas/fota_options"
                    }
                  }
                }
              }
            }
          }
        },
        "tags": ["General"]
      },
      "x-web": {
        "menu": ["System", "Firmware", "FOTA Configuration"]
      }
    }
  },
  "components": {
    "responses": {
      "200fota": {
        "description": "Example response",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "description": "Operation status",
                  "type": "boolean"
                },
                "data": {
                  "type": "array",
                  "description": "Array of section objects",
                  "items": {
                    "$ref": "#/components/schemas/fota_options"
                  }
                }
              }
            }
          }
        }
      }
    },
    "schemas": {
      "fota_options": {
        "allOf": [
          {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Configuration ID"
              }
            }
          },
          {
            "$ref": "#/components/schemas/fota_single_options"
          }
        ]
      },
      "fota_single_options": {
        "title": "RUT Fota single options",
        "type": "object",
        "properties": {
          "enabled": {
            "x-web": {
              "pretty": "Enable FOTA",
              "input-type": "switch"
            },
            "type": "string",
            "description": "Enable/disable RUT Fota service.",
            "format": "is_bool",
            "enum": ["0", "1"]
          }
        }
      }
    }
  }
}
