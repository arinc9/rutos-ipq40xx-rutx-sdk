    "schemas": {
      "opcua_value_group_single_options": {
        "type": "object",
        "properties": {
          "enabled": {
            "type": "string",
            "description": "Enables/disables OPC UA Value Group configuration.",
            "x-web": {
              "pretty": "Enable",
              "input-type": "switch"
            },
            "format": "is_bool",
            "enum": [
              "0",
              "1"
            ]
          },
          "name": {
            "type": "string",
            "description": "Name of the value group (no functional use).",
            "format": "uciname",
            "x-web": {
              "pretty": "Name",
              "input-type": "input",
              "unique": true
            }
          },
          "scheduling_type": {
            "type": "string",
            "description": "Method of scheduling data retrievals.",
            "enum": [
              "0"
            ],
            "x-web": {
              "pretty": "Scheduling type",
              "input-type": "select",
              "enum-pretty": {
                "0": "Period"
              }
            }
          },
          "period": {
            "type": "string",
            "description": "Time duration between data retrievals (s).",
            "format": "irange(1, 86400)",
            "x-web": {
              "pretty": "Period",
              "input-type": "input"
            }
          },
          "fail_mode": {
            "type": "string",
            "description": "When to consider retrieval a failure.",
            "enum": [
              "0",
              "1",
              "2"
            ],
            "x-web": {
              "pretty": "Failure mode",
              "input-type": "select",
              "enum-pretty": {
                "0": "None",
                "1": "Any",
                "2": "All"
              }
            }
          },
          "fail_store": {
            "type": "string",
            "description": "Whether to store results of a failure.",
            "format": "is_bool",
            "enum": [
              "0",
              "1"
            ],
            "x-web": {
              "pretty": "Failure storage",
              "input-type": "switch",
              "depends": [
                {
                  "fail_mode": [
                    "1",
                    "2"
                  ]
                }
              ]
            }
          },
          "replacement": {
            "type": "string",
            "description": "String to replace results of a failure.",
            "x-web": {
              "pretty": "Failure replacement",
              "input-type": "input"
            }
          },
          "prefix": {
            "type": "string",
            "description": "String going before all the values.",
            "x-web": {
              "pretty": "Prefix",
              "input-type": "input"
            }
          },
          "midfix": {
            "type": "string",
            "description": "String going between all the values.",
            "x-web": {
              "pretty": "Midfix",
              "input-type": "input"
            }
          },
          "postfix": {
            "type": "string",
            "description": "String going after all the values.",
            "x-web": {
              "pretty": "Postfix",
              "input-type": "input"
            }
          }
        }
      },
      "opcua_value_group_test_options": {
        "type": "object",
        "properties": {
          "fail_mode": {
            "type": "string",
            "description": "When to consider retrieval a failure.",
            "format": "range(0, 2)",
            "minLength": 1,
            "maxLength": 1
          },
          "replacement": {
            "type": "string",
            "description": "String to replace results of a failure."
          },
          "prefix": {
            "type": "string",
            "description": "String going before all the values."
          },
          "midfix": {
            "type": "string",
            "description": "String going between all the values."
          },
          "postfix": {
            "type": "string",
            "description": "String going after all the values."
          },
          "values": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Values of group to test."
