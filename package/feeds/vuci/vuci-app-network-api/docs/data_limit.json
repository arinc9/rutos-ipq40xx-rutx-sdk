  "components": {
    "schemas": {
      "data_limit": {
        "type": "object",
        "properties": {
          "enabled": {
            "x-web": {
              "input-type": "switch",
              "pretty": "Enable data connection limit",
              "group": "General Settings",
              "depends": [
                {
                  "proto": "wwan"
                },
                {
                  "proto": "connm"
                }
              ]
            },
            "type": "string",
            "enum": [
              "0",
              "1"
            ],
            "description": "Enable data connection limit. Disables data when a limit for current period is reached"
          },
          "data_limit": {
            "x-web": {
              "input-type": "input",
              "pretty": "Data limit (MB)",
              "group": "General Settings",
              "depends": [
                {
                  "mob_limit_enabled": "1"
                }
              ]
            },
            "type": "string",
            "description": "Data limit (MB). Disable data after limit value in MB is reached"
          },
          "period": {
            "x-web": {
              "input-type": "select",
              "pretty": "Period",
              "group": "General Settings",
              "depends": [
                {
                  "mob_limit_enabled": "1"
                }
              ],
              "enum-pretty": {
                "day": "Day",
                "week": "Week",
                "month": "Month"
              }
            },
            "enum": [
              "day",
              "week",
              "month"
            ],
            "type": "string",
            "description": "Period for which data limiting should apply."
          },
          "reset_day": {
            "x-web": {
              "input-type": "input",
              "pretty": "Start day",
              "group": "General Settings",
              "depends": [
                {
                  "mob_limit_enabled": "1",
                  "period": "month"
                }
              ]
            },
            "type": "string",
            "description": "Start day. A starting day in a month for data limiting period."
          },
          "reset_hour": {
            "x-web": {
              "input-type": "input",
              "pretty": "Start hour",
              "group": "General Settings",
              "depends": [
                {
                  "mob_limit_enabled": "1",
                  "period": "day"
                }
              ]
            },
            "type": "string",
            "description": "Start hour. A starting hour in a day for data limiting period."
          },
          "reset_weekday": {
            "x-web": {
              "input-type": "input",
              "pretty": "Start day",
              "group": "General Settings",
              "depends": [
                {
                  "mob_limit_enabled": "1",
                  "period": "week"
                }
              ]
            },
            "type": "string",
            "description": "Start day. A starting day in a week for data limiting period."
          },
          "enable_warning": {
            "x-web": {
              "input-type": "switch",
              "pretty": "Enable SMS warning",
              "group": "General Settings",
              "depends": [
                {
                  "mob_limit_enabled": "1"
                }
              ]
            },
            "type": "string",
            "description": "Enable SMS warning. Enables sending of warning SMS message when data limit is reached.",
            "enum": [
              "0",
              "1"
            ]
          },
          "warning_limit": {
            "x-web": {
              "input-type": "input",
              "pretty": "Data limit (MB)",
              "group": "General Settings",
              "depends": [
                {
                  "enable_warning": "1"
                }
              ]
            },
            "type": "string",
            "description": "Data limit (MB). Send warning SMS message after limit value in MB is reached. Data warning limit cannot be higher than data limit!"
          },
          "warning_num": {
            "x-web": {
              "input-type": "input",
              "pretty": "Phone number",
              "group": "General Settings",
              "depends": [
                {
                  "enable_warning": "1"
                }
              ]
            },
            "type": "string",
            "description": "Phone number. A phone number to send warning SMS message to."
          }
        }
      },
