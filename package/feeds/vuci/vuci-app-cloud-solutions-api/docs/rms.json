          },
          "connection_state": {
            "type": "string",
            "description": "Describes the current state of the connection."
          },
          "lan_mac": {
            "type": "string",
            "description": "Device's IMEI."
          },
          "serial_nbr": {
            "type": "string",
            "description": "A unique 10-digit device identifier."
          }
        }
      }
