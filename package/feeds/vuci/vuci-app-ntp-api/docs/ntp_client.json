            "x-web": {
              "pretty": "Count of failed NTP requests",
              "input-type": "input",
              "hw_tags": {
                "mobile": true
              },
              "depends": [
                {
                  "enabled": "1",
                  "sync_enabled": "1"
                }
              ]
            }
          },
          "current_system_time": {
            "description": "Current system time.",
            "type": "string",
            "format": "uinteger"
          },
          "gps_sync": {
            "type": "string",
            "description": "Enables periodic time synchronization for the system using the GPS module (does not require an Internet connection). GPS will be turned on if this option is true.",
