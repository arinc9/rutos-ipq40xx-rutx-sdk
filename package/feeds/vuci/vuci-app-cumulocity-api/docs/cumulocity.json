  "components": {
    "responses": {
      "200Cumulocity": {
        "description": "Returns configuration",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean",
                  "description": "Operation status"
                },
                "data": {
                  "$ref": "#/components/schemas/cumulocity_options"
                }
              },
              "required": ["success", "data"]
            }
          }
        }
      },
      "200CumulocityMulti": {
        "description": "",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "description": "Operation status",
                  "type": "boolean"
                },
                "data": {
                  "type": "array",
                  "description": "",
                  "items": {
                    "$ref": "#/components/schemas/cumulocity_options"
                  }
                }
              },
              "required": ["success", "data"]
            }
          }
        }
      }
    },
    "schemas": {
      "cumulocity_single_options": {
        "type": "object",
        "title": "",
        "description": "Options required to configure a working cumulocity service.",
        "properties": {
          "enabled": {
            "type": "string",
            "description": "Enable cumulocity application",
            "format": "is_bool",
            "enum": ["0", "1"],
            "x-web": {
              "pretty": "Enable",
              "input-type": "switch"
            }
          },
          "ssl": {
            "type": "string",
            "description": "Use SSL/TLS Protocol",
            "enum": ["0", "1"],
            "format": "is_bool",
            "x-web": {
              "pretty": "Use SSL/TLS",
              "input-type": "switch"
            }
          },
          "server": {
            "type": "string",
            "description": "Cumulocity Server Address",
            "format": "host",
            "example": "www.hostname.com",
            "minLength": 0,
            "maxLength": 254,
            "x-web": {
              "pretty": "Server Address",
              "input-type": "input"
            }
          },
          "interval": {
            "type": "string",
            "description": "Push connection interval in minutes",
            "format": "irange(1, 32767)",
            "minLength": 1,
            "maxLength": 5,
            "example": "200",
            "x-web": {
              "pretty": "Interval",
              "input-type": "input"
            }
          }
        }
      },
      "cumulocity_options": {
        "allOf": [
          {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Cumulocity Configuration identifier (ID)."
              }
            },
            "required": ["id"]
          },
          {
            "$ref": "#/components/schemas/cumulocity_single_options"
          }
        ]
      }
    }
