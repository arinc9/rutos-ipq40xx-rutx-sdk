          "enabled": {
            "x-web": {
              "pretty": "Enable",
              "input-type": "switch"
            },
            "type": "string",
            "description": "Turns the PAM auth on or off.",
            "format": "is_bool",
            "enum": ["0", "1"]
          },
          "service": {
            "x-web": {
              "pretty": "Service",
              "input-type": "select",
              "enum-pretty": {
                "sshd": "SSH",
                "rpcd": "WebUI"
