      "smpp_single_options": {
        "title": "smpp_general",
        "type": "object",
        "properties": {
          "enabled": {
            "type": "string",
            "enum": ["0", "1"],
            "description": "Enables or disables smpp server",
            "x-web": {
              "pretty": "Enable",
              "input-type": "switch"
            }
          },
          "username": {
            "type": "string",
            "description": "Username for authentication on SMPP server. All characters are allowed except ` and space.",
            "format": "credentials_validate",
            "maxLength": 15,
            "default": "admin",
            "x-web": {
              "pretty": "Username",
              "input-type": "input"
            }
          },
          "password": {
            "type": "string",
            "description": "Password for authentication on SMPP server. All characters are allowed except ` and space.",
