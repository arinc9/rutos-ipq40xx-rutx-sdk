    "/stunnel/config/{id}": {
      "get": {
        "summary": "Returns specified stunnel section",
        "responses": {
          "200": {
            "$ref": "#/components/responses/200stunnel"
          },
          "404": {
            "$ref": "#/components/responses/404response"
          }
        },
        "tags": ["General"]
      },
      "delete": {
        "summary": "Deletes specified stunnel configuration",
        "responses": {
          "200": {
            "$ref": "#/components/responses/200deleted"
