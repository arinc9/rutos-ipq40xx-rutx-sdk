    "schemas": {
      "esim_options": {
        "description": "",
        "type": "object",
        "properties": {
          "enabled": {
            "type": "string",
            "description": "Enable or disable eSIM profile.",
            "enum": [
              "0",
              "1"
            ],
            "x-web": {
              "pretty": "Enable",
              "input-type": "switch"
            }
          },
          "name": {
            "type": "string",
            "maxLength": 64,
            "description": "eSIM profile name.",
            "x-web": {
              "pretty": "Profile name",
              "input-type": "input"
            }
          },
          "modem": {
            "type": "string",
            "description": "Modem ID",
            "readOnly": true,
            "x-web": {
              "pretty": "Modem",
              "input-type": "select",
              "enum-pretty": {
                "$ref": "#/x-schemas/modem_names"
              },
              "enum-depends": {
                "$ref": "#/x-schemas/modem_select"
              }
            }
          },
          "provider": {
            "type": "string",
            "description": "eSIM profile provider name.",
            "readOnly": true,
            "x-web": {
              "pretty": "eSIM profile provider",
              "input-type": "input"
            }
          }
        },
        "required": [
          "enabled"
        ]
      },
      "esim_options_id": {
        "allOf": [
          {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "The ID of the eSIM profile configuration",
                "x-web": {
                  "pretty": "Configuration ID",
                  "input-type": "input"
                }
              }
            },
            "required": [
              "id"
            ]
          },
          {
            "$ref": "#/components/schemas/esim_options"
          }
        ]
      },
      "esim_status": {
        "description": "",
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Modem ID",
            "x-web": {
              "pretty": "Modem",
              "enum-pretty": {
                "$ref": "#/x-schemas/modem_names"
              },
              "enum-depends": {
                "$ref": "#/x-schemas/modem_select"
              }
            }
          },
          "eid": {
            "type": "string",
            "description": "eSIM ID"
          },
          "pending_notifications": {
            "type": "array",
            "description": "Pending notifications",
            "items": {
              "type": "object",
              "properties": {
                "sequence_number": {
                  "type": "string",
                  "description": "Pending notification sequence number"
                },
                "event": {
                  "enum": [
                    "0",
                    "1",
                    "2",
                    "3"
                  ],
                  "x-web": {
                    "pretty": "Notification type",
                    "enum-pretty": {
                      "0": "Install profile",
                      "1": "Enable profile",
                      "2": "Disable profile",
                      "3": "Delete profile"
                    }
                  },
                  "type": "string",
                  "description": "Pending notification type"
                },
                "address": {
                  "type": "string",
                  "description": "Server address of pending notification"
                },
                "iccid": {
                  "type": "string",
                  "description": "ICCID of pending notification eSIM"
                }
              }
            }
          }
        }
      }
    }
