        ],
        "summary": "Test request configuration",
        "responses": {
          "200": {
            "$ref": "#/components/responses/200RequestActionTCP"
          },
          "422": {
            "$ref": "#/components/responses/422response"
          }
        },
        "requestBody": {
          "description": "Parameter configuration",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "data": {
                    "$ref": "#/components/schemas/DNP3_tcp_test_request_options"
                  }
                },
                "x-examples": {
                  "example-1": {
                    "data": {
                      "local_addr": "65519",
