{
	"network/routes/static_routes": {
		"description": "static routes configuration",
		"read": {
			"api": [
				"/ip_routes/*",
				"/firewall/connections/status/*",
				"/routes/connections_realtime/*",
				"/interfaces/config/*",
				"/l2tp/server/config/*",
				"/l2tp/client/config/*",
				"/l2tpv3/config/*",
				"/pptp/server/config/*",
				"/pptp/client/config/*",
				"/gre/config/*",
				"/wireguard/config/*"
			]
		},
		"write": {
			"api": [
				"/ip_routes/*",
				"/firewall/connections/status/*",
				"/routes/connections_realtime/*"
			]
		}
	},

	"network/routes/advanced_routing": {
		"description": "advanced static routes configuration",
		"read": {
			"api": [
				"/ip_rules/ipv4/*",
				"/routing_tables/*",
				"/ip_routes/*",
				"/interfaces/config/*",
				"/l2tp/server/config/*",
				"/l2tp/client/config/*",
				"/l2tpv3/config/*",
				"/pptp/server/config/*",
				"/pptp/client/config/*",
				"/gre/config/*",
				"/wireguard/config/*"
			]
		},
		"write": {
			"api": [
				"/ip_rules/ipv4/*",
				"/routing_tables/*",
				"/ip_routes/*"
			]
		}
	},

	"status/routes/general": {
		"description": "general routes",
		"read": {
			"api": [
				"/routes/status/*",
				"/ip_neighbors/*",
				"/ip_routes/*"
			]
		}
	}
}
