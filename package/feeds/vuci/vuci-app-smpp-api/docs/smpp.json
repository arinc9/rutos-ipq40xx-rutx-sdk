            "maxLength": 8,
            "writeOnly": true,
            "x-web": {
              "pretty": "Password",
              "input-type": "input"
            }
          },
          "port": {
            "type": "string",
            "description": "A port that will be used for smpp server communications. Allowed all not used ports (0-65535)",
            "format": "port",
            "default": "2775",
            "x-web": {
              "pretty": "Server port",
              "input-type": "input"
            }
          },
          "modem": {
            "type": "string",
            "description": "Modem",
