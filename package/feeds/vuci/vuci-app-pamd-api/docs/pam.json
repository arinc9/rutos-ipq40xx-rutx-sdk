            "type": "string",
            "enum": ["sshd", "rpcd"],
            "description": "Service"
          },
          "module": {
            "x-web": {
              "pretty": "Module",
              "input-type": "input"
            },
            "type": "string",
            "description": "Specifies the PAM module that implements the service."
          },
          "type": {
            "x-web": {
              "pretty": "Type",
              "input-type": "select",
              "enum-pretty": {
                "required": "Required",
                "requisite": "Requisite",
                "sufficient": "Sufficient",
                "optional": "Optional"
              }
            },
            "type": "string",
            "enum": ["required", "requisite", "sufficient", "optional"],
            "description": "Determines the continuation or failure behavior for the module."
          },
          "server": {
            "x-web": {
              "pretty": "Server",
              "input-type": "input",
              "depends": [
                {
                  "module": "radius_auth"
                },
                {
                  "module": "tacplus"
                }
              ]
            },
            "type": "string",
            "description": "The IP address of the RADIUS/TACACS+ server.",
            "format": "ipaddr"
          },
          "secret": {
            "x-web": {
              "pretty": "Secret",
              "input-type": "input",
              "depends": [
                {
                  "module": "radius_auth"
                },
                {
                  "module": "tacplus"
                }
              ]
            },
            "type": "string",
            "description": "RADIUS/TACACS+ shared secret."
          },
          "port": {
            "x-web": {
              "pretty": "Port",
              "input-type": "input",
              "depends": [
                {
                  "module": "radius_auth"
                },
                {
                  "module": "tacplus"
                }
              ]
            },
            "type": "string",
            "description": "Server authentication port.",
            "format": "port"
          },
          "timeout": {
            "x-web": {
              "pretty": "Timeout",
              "input-type": "input",
              "depends": [
                {
                  "module": "radius_auth"
                }
              ]
            },
            "type": "string",
            "description": "Timeout in seconds waiting for RADIUS server reply.",
            "format": "range(3, 10)",
            "minLength": 1,
            "maxLength": 2
          },
          "all_users": {
            "x-web": {
              "pretty": "All users",
              "input-type": "switch",
              "depends": [
                {
                  "service": "rpcd",
                  "users": ""
                }
              ]
            },
            "type": "string",
            "description": "Indicate if all users should use PAM for authentication.",
            "format": "is_bool",
            "enum": [
              "0",
              "1"
            ]
          },
          "users": {
            "x-web": {
              "pretty": "Specific users",
              "input-type": "input",
              "depends": [
                {
                  "service": "rpcd",
                  "all_users": "0"
                }
              ]
            },
            "type": "array",
            "description": "List of users that should use PAM for authentication.",
            "items": {
              "type": "string"
            }
          }
        },
        "required": ["enabled", "service", "module", "type", "server", "secret", "port", "timeout"]
